.toptips-toptips {
    display: block;
    height: initial;
}
.toptips-toptips .weui-toptips_show.weui-toptips {
    display: block;
}

.toptips-toptips .weui-toptips_show {
    -webkit-transform: translateZ(0) translateY(0);
    transform: translateZ(0) translateY(0);
    opacity: 1;
}

.toptips-toptips .weui-toptips_success {
    background-color: var(--weui-BRAND);
}

.toptips-toptips .weui-toptips_error {
    background-color: var(--weui-RED);
}

.toptips-toptips .weui-toptips_info {
    background-color: var(--weui-BLUE);
}
