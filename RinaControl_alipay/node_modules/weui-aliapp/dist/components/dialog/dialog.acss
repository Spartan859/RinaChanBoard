.dialog-dialog {
    display: block;
    height: initial;
}
.dialog-dialog .weui-dialog.weui-dialog_hidden {
    opacity: 0;
    transform: scale3d(1, 1, 0);
}

.dialog-dialog .weui-dialog {
    opacity: 1;
    -webkit-transform: scale3d(1, 1, 1) translateY(-50%);
    transform: scale3d(1, 1, 1) translateY(-50%);
    transition: all 0.2s ease-in;
}

.dialog-dialog .weui-mask.weui-mask_hidden {
    opacity: 0;
    transform: scale3d(1, 1, 0);
}

.dialog-dialog .weui-mask {
    opacity: 1;
    transform: scale3d(1, 1, 1);
    transition: all 0.2s ease-in;
}
