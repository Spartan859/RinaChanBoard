.half-screen-dialog-half-screen-dialog {
    display: block;
    height: initial;
}
.half-screen-dialog-half-screen-dialog .weui-mask,
.half-screen-dialog-half-screen-dialog .weui-half-screen-dialog {
    transition: all 0.3s;
}

.half-screen-dialog-half-screen-dialog .weui-hidden .weui-mask {
    visibility: hidden;
    opacity: 0;
}

.half-screen-dialog-half-screen-dialog .weui-hidden .weui-half-screen-dialog {
    transform: translateY(100%);
}

.half-screen-dialog-half-screen-dialog .weui-show .weui-mask {
    opacity: 1;
    visibility: visible;
}

.half-screen-dialog-half-screen-dialog .weui-show .weui-half-screen-dialog {
    transform: translateY(0%);
}
